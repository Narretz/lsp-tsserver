{
	"compilerOptions": {
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"target": "es6",
		"module": "commonjs",
		"plugins": [
			{"name": "tslint-language-service-ts3"}
		],
		"moduleResolution": "node",
		"sourceMap": true,
		"lib" : [ "es2016" ],
		"outDir" : "build"
	},
	"exclude": [
		"node_modules"
	]
}